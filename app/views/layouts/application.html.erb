<!DOCTYPE html>
<html>
<head>
  <title>NinetyNineCatsDay1</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- if logged in show usernmae and logout
else login button redirect to login page -->
<% if current_user.nil? %>

<form action = "<%= new_sessions_url %>" method = "get">

    <input type = "submit" value = "login">
  </form>

  <form action = "<%= new_user_url %>" method = "get">

      <input type = "submit" value = "sign up">
    </form>

<% else %>
  <p><%= current_user.user_name %><p>
    <form action = "<%= sessions_url %>" method = "post">
      <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

      <input type="hidden" name="_method" value="delete">
        <input type = "submit" value = "logout">
      </form>
<% end %>
<%= yield %>

</body>
</html>
